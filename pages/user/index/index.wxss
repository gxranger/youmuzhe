.UCenter-bg {
    background-image: url(https://www.youmuzhe.net/image/index12.jpg);
    background-size: cover;
    height: 350rpx;
    display: flex;
    justify-content: center;
    overflow: hidden;
    position: relative;
    flex-direction: column;
    align-items: center;
    color: #fff;
    font-weight: 300;
    text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
  }
  
  .UCenter-bg text {
    opacity: 0.8;
  }
  
  .UCenter-bg image {
    width: 200rpx;
    height: 200rpx;
  }
  
  .UCenter-bg .gif-wave{
    position: absolute;
    width: 100%;
    bottom: 0;
    left: 0;
    z-index: 99;
    mix-blend-mode: screen;  
    height: 100rpx;   
  }
  .userImg {
      width: 150rpx!important;
      height: 150rpx!important;
      border-radius: 50%;
      border:rgba(255,255,255, .3) 5px solid;
  }
  .qualify {
      width: 100rpx;
      height: 35rpx;
      line-height: 35rpx;
      text-align: center;
      font-size: 22rpx;
      border-radius: 10rpx;
      border:1px white solid;
      margin-top: 10rpx;
  }
  .iconInfo {
      height: 60rpx;
      line-height: 60rpx;
  }
  .iconInfo .iconfont {
      font-size: 28rpx;
  }
  .iconInfo .iconbzj {
      margin-right: 10rpx;
  }
  .iconInfo .iconhuiyuan {
      font-size: 32rpx;
  }
  .userLevel .flex view:first-child {
      height: 60rpx;
      display: flex;
      justify-content: center;
      align-items: center;
  }

  .cu-item .content {
      height: 60rpx;
      line-height: 60rpx;
  }
  .cu-item .content .iconfont {
      font-size: 32rpx;
      margin-right: 10rpx;
  }
  .cu-item .content .iconxiaoxi,.cu-item .content .iconshoucang,.cu-item .content .iconyouhuijuan {
      font-size: 36rpx;
  }
  .cu-item .content .iconshoucang {
      position: relative;
      right: 3rpx;
  }