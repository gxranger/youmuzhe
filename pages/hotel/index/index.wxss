/* pages/hotel/index.wxss */
@import "../../templates/topContent.wxss";

.hotelWrap {
    display: flex;
    flex-direction: column;
    align-items: center;
}
.researchHotelWrap {
    width: 95%;
    padding: 25rpx;
    background: #fff;
    position:absolute;
    left: 50%;
    top: 620rpx;
    z-index: 1000;
    box-shadow: 0 0 20rpx #d1d1d1;
    
    transform: translate(-50%, -50%);
}
.destinationWrap,.dateSelectWrap,.bandSearchWrap {
    width:100%;
    border-bottom: 1px solid #e2e2e2;
    margin-bottom: 20rpx;
}
.destinationWrap view:first-child,.dateSelectDate view:first-child,.bandSearchWrap {
    color: #888888;
    font-size: 28rpx;
}
.destinationSelect,.bandSearchWrap {
    height: 80rpx;
    line-height: 80rpx;
    font-size: 30rpx;
}
.iconjiantou {
    color: #d8d8d8;
}
.researchHotelWrap .iconjiantou {
    font-size: 30rpx;
}
.dateSelectWrap {
    height: 110rpx;
    margin-bottom: 0;
}
.dateSelectDate {
    width: 40%;
    flex-direction: column;
}
.hotelNum {
    width: 20%;
    font-size: 26rpx;
    color: #888888;
}
.hotelNum view {
    width: 100%;
    height: 50rpx;
    border:1px #18A8EA solid;
    line-height: 50rpx;
    text-align: center;
    border-radius: 40rpx;
}
.dateInfo {
    margin-top: 15rpx;
    font-size: 36rpx;
}
.searchHotelBtn .cu-btn {
    width: 100%;
    height: 80rpx;
}

.bandSearchWrap {
    height: 90rpx;
}
.rowBannerWrap {
    width: 100%;
    margin-top: 470rpx;
    margin-bottom: 20rpx;
    /* border: orange 1px solid;  */
}
.recommendHotelTitle .more {
    height: 50rpx;
    display: flex;
    align-items: center;
    font-size: 26rpx;
    float: right;
    position: absolute;
    right: 30rpx;
  }
.new {
    position: relative;
    left: 20rpx;
    top: 10rpx;
    width: 70rpx;
    height: 30rpx;
    line-height: 30rpx;
    border-radius: 30rpx;
    text-align: center;
    font-size: 22rpx;
    color: #fff;
    background: #F12C20;
}
.recommendHotelSwiper {
    width: 700rpx;
    padding: 20rpx 0;
    margin-top: 50rpx;
    /* border: orange 1px solid;  */
}
.recommendHotelSwiper .screen-swiper {
    min-height: 340rpx;
    border-radius: 20rpx;
    box-shadow: 0 0 20rpx #888888;
}
.recommendHotelSwiper .screen-swiper image,.recommendHotelSwiper .screen-swiper video {
    border-radius: 20rpx;
}
.priceTag {
    width: 180rpx;
    height: 90rpx;
    border-top-left-radius: 40rpx;
    border-bottom-left-radius: 40rpx;
    position: absolute;
    right: 0rpx;
    top: 20rpx;
    z-index: 1000;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background: #18A8EA;
    color: #fff;
    font-size: 28rpx;
}
.priceTag text:first-child{
    font-size: 36rpx;
}
.hotelName {
    position: absolute;
    bottom: 35rpx;
    left: 10rpx;
    z-index: 1000;
    font-size: 38rpx;
    color: #fff;
}
.grid .cu-btn {
    font-size: 22rpx;
    padding: 0;
}
.closeAction .cuIcon-roundclosefill {
    position: relative;
    right: 20rpx;
    top: 10rpx;
    font-size: 46rpx;
    color: #888888;
}
.priceWrap input {
    width: 30%;
    height: 60rpx;
    font-size: 30rpx;
    border: #bdbdbd 1px solid;
    margin: 0 15rpx;
    text-align: center;
}
.priceWrap view {
    line-height: 60rpx;
    color: #bdbdbd;
}
.submitBtn button {
    width: 280rpx;
    height: 80rpx;
    line-height: 80rpx;
}
.hotHotelWrap {
    width: 100%;
    flex-direction: column;
}
.hotContent {
    height: 260rpx;
    margin-top: 65rpx;
}
.hotLeft,.hotRight {
    width: 340rpx;
}
.hotLeft {
    height: 260rpx;
    border-right: #e2e2e2 1px solid;
    margin-right:10rpx; 
    padding-right: 10rpx;
}
.hotRight {
    height: 260rpx;
    flex-direction: column;
}
.hotRight view:first-child {
    border-bottom: #e2e2e2 1px solid;
}
.hotRight view {
    width: 340rpx;
    height: 130rpx;
}