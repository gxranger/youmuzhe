/* pages/hotel/index.wxss */
@import "../../templates/topContent.wxss";

.hotelWrap {
    display: flex;
    flex-direction: column;
    align-items: center;
}
.researchHotelWrap {
    width: 95%;
    padding: 25rpx;
    background: #fff;
    position:absolute;
    top: 380rpx;
    z-index: 9000;
    box-shadow: 0 0 20rpx #d1d1d1;
}
.destinationWrap,.dateSelectWrap,.bandSearchWrap {
    width:100%;
    border-bottom: 1px solid #e2e2e2;
    margin-bottom: 20rpx;
}
.destinationWrap view:first-child,.dateSelectDate view:first-child,.bandSearchWrap {
    color: #888888;
    font-size: 28rpx;
}
.destinationSelect {
    height: 80rpx;
    font-size: 30rpx;
}
.researchHotelWrap .iconjiantou {
    font-size: 30rpx;
}
.dateSelectWrap {
    height: 110rpx;
    margin-bottom: 0;
}
.dateSelectDate {
    width: 40%;
    flex-direction: column;
}
.hotelNum {
    width: 20%;
    font-size: 26rpx;
    color: #888888;
}
.hotelNum view {
    width: 90%;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    border-radius: 40rpx;
}
.dateInfo {
    margin-top: 15rpx;
    font-size: 36rpx;
}
.searchHotelBtn .cu-btn {
    width: 100%;
    height: 80rpx;
}

.bandSearchWrap {
    height: 90rpx;
}
.rowBannerWrap {
    width: 100%;
    margin-top: 470rpx;
    margin-bottom: 20rpx;
    /* border: orange 1px solid;  */
}
.recommendHotelTitle .more {
    height: 50rpx;
    display: flex;
    align-items: center;
    font-size: 26rpx;
    float: right;
    position: absolute;
    right: 30rpx;
    color: #888888;
  }
.new {
    position: relative;
    left: 20rpx;
    top: 10rpx;
    width: 70rpx;
    height: 30rpx;
    line-height: 30rpx;
    border-radius: 30rpx;
    text-align: center;
    font-size: 22rpx;
    color: #fff;
    background: #F12C20;
}
.recommendHotelSwiper {
    width: 680rpx;
    padding: 20rpx;
    margin-top: 50rpx;
    /* border: orange 1px solid;  */
}
.recommendHotelSwiper .screen-swiper {
    border-radius: 20rpx;
    box-shadow: 0 0 20rpx #888888;
}
.recommendHotelSwiper .screen-swiper image,.recommendHotelSwiper .screen-swiper video {
    border-radius: 20rpx;
}
.priceTag {
    width: 180rpx;
    height: 90rpx;
    border-top-left-radius: 40rpx;
    border-bottom-left-radius: 40rpx;
    position: absolute;
    right: 0rpx;
    top: 20rpx;
    z-index: 9000;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background: #18A8EA;
    color: #fff;
    font-size: 28rpx;
}
.priceTag text:first-child{
    font-size: 36rpx;
}
.hotelName {
    position: absolute;
    bottom: 35rpx;
    left: 10rpx;
    z-index: 9000;
    font-size: 38rpx;
    color: #fff;
}