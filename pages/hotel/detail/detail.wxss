.detailWrap {
    flex-direction: column;
    align-items: center;
}
.detailSwiperWrap {
    width:715rpx;
    margin: 15rpx 0;
}
.detailSwiperWrap .screen-swiper,.detailSwiperWrap image {
    border-top-left-radius: 15rpx;
    border-top-right-radius: 15rpx;
	min-height: 350rpx;
}
.hotelInfoWrap {
    width: 95%;
    height: 90rpx;
    padding: 0 15rpx;
    /* border:red 1px solid; */
}
.hotelTitle {
    flex-direction: column;
    font-size: 24rpx;
}
.hotelTitle text:first-child {
    font-size: 38rpx;
    margin-bottom: 8rpx;
}
.hotelStars {
    color:#888888;
}
.iconGroup {
    margin-right: 10rpx;
}
.iconGroup .iconfive-star,.iconNumber {
    font-size: 24rpx;
}
.infoDeatail {
    width: 95%;
}
.infoDeatailContent {
    width: 95%;
    margin-top: 15rpx;
    padding: 10rpx;
    /* border:red 1px solid; */
}
.topInfo view{
    width: 33%;
    color: #888888;
    font-size: 24rpx;
}
.introduceContent {
    font-size: 28rpx;
    line-height: 35rpx;
}
.footInfo view {
    margin-right: 60rpx;
    font-size: 28rpx;
}
.footInfo .iconfont {
    font-size: 28rpx;
    margin-right: 5rpx;
}
.hotelFacility {
    flex-wrap: wrap;
}
.hotelFacility view {
    width: 20%;
    font-size: 24rpx;
    margin-bottom: 10rpx;
}
.hotelFacility .iconfont {
    font-size: 24rpx;
    margin-right: 3rpx;
}
