@import "../../templates/topContent.wxss";
/* 推荐活动 */
.recommendWrap {
    width: 100%;
    background: #fff;
    display: flex;
    flex-direction: column;
    padding: 20rpx;
    margin: 20rpx 0;
  }
  .recommendList {
    margin-top: 60rpx;
  }
  .recommendItem {
    width: 48%;
    height: 200rpx;
    margin: 10rpx 0;
    border-bottom-right-radius: 15rpx;
    border-bottom-left-radius: 15rpx;
  }
  .recommendItem image {
    width: 100%;
    height: 100%;
    border-radius: 15rpx;
  }