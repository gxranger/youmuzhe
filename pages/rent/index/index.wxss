@import "../../templates/topContent.wxss";
/* 推荐活动 */
.recommendWrap {
    width: 100%;
    background: #fff;
    display: flex;
    flex-direction: column;
    padding: 20rpx 0;
    margin: 20rpx 0;
  }
  .recommendList {
    margin-top: 60rpx;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-evenly;
  }
  .recommendItem {
    width: 45%;
    height: 180rpx;
    margin: 10rpx 0;
    border-bottom-right-radius: 15rpx;
    border-bottom-left-radius: 15rpx;
  }
  .recommendItem image {
    width: 100%;
    height: 100%;
    border-radius: 15rpx;
  }